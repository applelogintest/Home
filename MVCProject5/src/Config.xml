<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration 
 PUBLIC "-//mybatis.org//DTD Config 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-config.dtd">
 
 <configuration>
 	<properties resource="db.properties"/>
 	<typeAliases>
 		<typeAlias type="com.sist.dao.BoardVO" alias="BoardVO"/>
 	</typeAliases>
 	<environments default="development">
		<environment id="development"> 
			<transactionManager type="JDBC"/>
			<!-- 
				COMMIT,ROLLBACK
				====== ========
				1) JDBC 자동으로 커밋과 롤백이 됨
				2) MANAGED 직접 조절해야됨
			 -->
			<dataSource type="POOLED">
				<!-- 
					데이터베이스의 모든 정보 => DataSource
					= UNPOOLED : 연결 , 해제 (요청할때마다 커넥션 생성)
					= POOLED : ConnectionPOOL 주소 얻기, 반환(미리 커넥션을 만들어놓고 접속하면 커넥션을주고 다시 반환 받음) 
						(maxActive(8),maxIdel(8)) 커넥션 기본 생성수 default
					= JNDI
				 -->
				 <property name="driver" value="${driver}"/>
				 <property name="url" value="${url}"/>
				 <property name="username" value="${username}"/>
				 <property name="password" value="${password}"/>
			</dataSource>
		</environment>
 	</environments>
 	
 	<mappers>
 		<mapper resource="com/sist/dao/board-mapper.xml"/>
 	</mappers>
 </configuration>